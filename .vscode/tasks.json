{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "inputs": [
        {
            "id": "closeSerialMonitor",
            "type": "command",
            "command": "arduino.closeSerialMonitor"
        }
    ],
    "tasks":[
        {
            "label": "compile",
            "type": "shell",
            "command": "arduino-cli compile -b ${config:arduino_fqbn} ${config:arduino_sketch} ${config:arduino_build_properties}; [console]::beep(500,300)",
            "group": "build",
            "isBackground": false,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "icon": {
                "id": "check"
            },
            "problemMatcher": []
        },
        {
            "label": "upload",
            "type": "shell",
            "command": "arduino-cli upload -p ${config:arduino_port} -b ${config:arduino_fqbn} ${config:arduino_sketch} ${config:arduino_upload_properties}; [console]::beep(500,300)",
            "group": "test",
            "isBackground": false,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "icon": {
                "id": "arrow-up"
            },
            "dependsOn":["closeSerialMonitor"],
            "problemMatcher": []
        },
        {
            "label": "closeSerialMonitor",
            "command": "${input:closeSerialMonitor}",
            "problemMatcher": []
        }
    ]
}